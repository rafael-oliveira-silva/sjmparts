<?xml version="1.0"?>
<config>
    <modules>
        <Trezo_Cielo>
            <version>1.2.2</version>
        </Trezo_Cielo>
    </modules>
    <global>
        <models>
            <trezo_cielo>
                <class>Trezo_Cielo_Model</class>
            </trezo_cielo>
        </models>
        <blocks>
            <trezo_cielo>
                <class>Trezo_Cielo_Block</class>
            </trezo_cielo>
        </blocks>
        <helpers>
            <trezo_cielo>
                <class>Trezo_Cielo_Helper</class>
            </trezo_cielo>
        </helpers>
        <resources>
            <trezo_cielo_setup>
                <setup>
                    <module>Trezo_Cielo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </trezo_cielo_setup>
            <trezo_cielo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </trezo_cielo_write>
            <trezo_cielo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </trezo_cielo_read>
        </resources>
        <fieldsets>
            <sales_convert_quote_payment>
                <cc_installments>
                    <to_order_payment>*</to_order_payment>
                </cc_installments>
            </sales_convert_quote_payment>
            <sales_convert_order_payment>
                <cc_installments>
                    <to_quote_payment>*</to_quote_payment>
                </cc_installments>
            </sales_convert_order_payment>
        </fieldsets>
        <payment>
            <cc>
                <types>
                    <DN>
                        <code>DN</code>
                        <name>Diners Club</name>
                        <order>100</order>
                    </DN>
                    <EL>
                        <code>EL</code>
                        <name>Elo</name>
                        <order>110</order>
                    </EL>
                </types>
            </cc>
            <dc></dc>
        </payment>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <description/>
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <events>
            <sales_order_place_after>
                <observers>
                    <cielo_order_place_after>
                        <class>trezo_cielo/observer</class>
                        <method>verifyCheckout</method>
                    </cielo_order_place_after>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <crontab>
        <jobs>
            <trezo_cielo>
                <schedule>
                    <cron_expr>*/30 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>trezo_cielo/cron_cron::processPayments</model>
                </run>
            </trezo_cielo>
        </jobs>
    </crontab>
    <frontend>
        <layout>
            <updates>
                <trezo_cielo>
                    <file>trezo_cielo.xml</file>
                </trezo_cielo>
            </updates>
        </layout>
        <translate>
            <modules>
                <Trezo_Cielo>
                    <files>
                        <default>Trezo_Cielo.csv</default>
                    </files>
                </Trezo_Cielo>
            </modules>
        </translate>
        <routers>
            <trezo_cielo>
                <use>standard</use>
                <args>
                    <module>Trezo_Cielo</module>
                    <frontName>trezo_cielo</frontName>
                </args>
            </trezo_cielo>
            <checkout>
                <args>
                    <modules>
                        <trezo_cielo before="Mage_Checkout">Trezo_Cielo</trezo_cielo>
                    </modules>
                </args>
            </checkout>
        </routers>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Trezo_Cielo>
                    <files>
                        <default>Trezo_Cielo.csv</default>
                    </files>
                </Trezo_Cielo>
            </modules>
        </translate>
        <layout>
            <updates>
                <trezo_cielo>
                    <file>trezo_cielo.xml</file>
                </trezo_cielo>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Trezo_Cielo before="Mage_Adminhtml">Trezo_Cielo_Adminhtml</Trezo_Cielo>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <payment>
            <cielo_general>
                <anti_fraud>0</anti_fraud>
                <log>0</log>
                <street>1</street>
                <number>2</number>
                <complement>3</complement>
                <district>4</district>
                <document_number>taxvat</document_number>
                <home_phone>telephone</home_phone>
                <mobile_phone>fax</mobile_phone>
                <work_phone>telephone</work_phone>
            </cielo_general>
            <cielo_cc>
                <active>0</active>
                <model>Trezo_Cielo_Model_Payment_CcMethod</model>
                <payment_action>authorize</payment_action>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <title><![CDATA[Cartão de crédito]]></title>
                <maxinstallments>10</maxinstallments>
                <validate>1</validate>
            </cielo_cc>
            <cielo_dc>
                <active>0</active>
                <model>Trezo_Cielo_Model_Payment_DcMethod</model>
                <payment_action>authorize_capture</payment_action>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <title><![CDATA[Cartão de débito]]></title>
                <maxinstallments>10</maxinstallments>
                <validate>1</validate>
            </cielo_dc>
            <cielo_boleto>
                <active>0</active>
                <model>Trezo_Cielo_Model_Payment_BoletoMethod</model>
                <payment_action>authorize</payment_action>
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <title><![CDATA[Boleto]]></title>
                <provider>Simulado</provider>
                <bank_number>341</bank_number>
            </cielo_boleto>
        </payment>
    </default>
</config>
