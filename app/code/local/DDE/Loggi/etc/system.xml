<?xml version="1.0"?>
<config>
    <sections>
        <carriers module="loggi" translate="label">
            <groups>
                <loggi translate="label">
                    <label>Loggi</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Habilitado</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <api_user translate="label">
                            <label>Usuário API</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_user>
                        <api_token translate="label">
                            <label>Token API</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_token>
                        <transport_type translate="label">
                            <label>Tipo de transporte</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>DDE_Loggi_Options_TransportTypeList</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transport_type>
                        <package_type translate="label">
                            <label>Tipo de pacote</label>
                            <frontend_type>select</frontend_type>
                            <source_model>DDE_Loggi_Options_PackageTypeList</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </package_type>
                        <withdrawal_city_pk translate="label">
                            <label>Cidade de retirada</label>
                            <frontend_type>select</frontend_type>
                            <source_model>DDE_Loggi_Options_CitiesList</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </withdrawal_city_pk>
                        <min_order_value translate="label">
                            <label>Valor mínimo da compra</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </min_order_value>
                        <max_order_value translate="label">
                            <label>Valor máximo da compra</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_order_value>
                        <google_maps_api_key translate="label">
                            <label>Google Maps API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_maps_api_key>
                        <additional_fee_percentage translate="label">
                            <label>Valor Adicional (%)</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Obs.: Colocar o valor desejado em porcentagem (Ex.: 10%<br />Obs.: Preencha apenas um dos campos de "Valor Adicional")]]></comment>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </additional_fee_percentage>
                        <additional_fee translate="label">
                            <label>Valor Adicional (R$)</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Obs.: Colocar o valor desejado em reais (Ex.: 5)<br />Obs.: Preencha apenas um dos campos de "Valor Adicional"]]></comment>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </additional_fee>
                    </fields>
                </loggi>
            </groups>
        </carriers>
    </sections>
</config>
