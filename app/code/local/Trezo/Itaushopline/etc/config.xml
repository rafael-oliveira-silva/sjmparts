<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <Trezo_Itaushopline>
            <version>0.0.15</version>
        </Trezo_Itaushopline>
    </modules>
    <crontab>
        <jobs>
            <trezo_itaushopline>
                <schedule>
                    <cron_expr>0 */1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>itaushopline/cron::run</model>
                </run>
            </trezo_itaushopline>
        </jobs>
    </crontab>
    <global>
        <helpers>
            <itaushopline>
                <class>Trezo_Itaushopline_Helper</class>
            </itaushopline>
        </helpers>
        <blocks>
            <itaushopline>
                <class>Trezo_Itaushopline_Block</class>
            </itaushopline>
        </blocks>
        <models>
            <itaushopline>
                <class>Trezo_Itaushopline_Model</class>
                <resourceModel>itaushopline_mysql4</resourceModel>
            </itaushopline>
            <itaushopline_mysql4>
                <class>Trezo_Itaushopline_Model_Mysql4</class>
                <entities>
                    <transactions>
                        <table>trezo_itaushopline_transactions</table>
                    </transactions>
                </entities>
            </itaushopline_mysql4>
        </models>
        <template>
            <email>
                <sales_email_boleto_cancellation_template translate="label" module="sales">
                    <label>Order cancellation email</label>
                    <file>sales/order_cancellation.html</file>
                    <type>html</type>
                </sales_email_boleto_cancellation_template>
            </email>
        </template>
        <resources>
            <itaushopline_setup>
                <setup>
                    <module>Trezo_Itaushopline</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </itaushopline_setup>
            <itaushopline_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </itaushopline_write>
            <itaushopline_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </itaushopline_read>
        </resources>
        <payment>
            <itaushopline>
                <types>
                    <ITAU_SLIP>
                        <code>ITAU_SLIP</code>
                        <name>Itau Slip</name>
                        <order>0</order>
                    </ITAU_SLIP>
                    <ITAU_TEF>
                        <code>ITAU_TEF</code>
                        <name>Itau TEF</name>
                        <order>1</order>
                    </ITAU_TEF>
                </types>
            </itaushopline>
        </payment>
        <events>
            <sales_order_invoice_register>
                <observers>
                    <trezo_itaushopline_observer_invoice_register>
                        <type>singleton</type>
                        <class>itaushopline/observer_invoice</class>
                        <method>capture</method>
                    </trezo_itaushopline_observer_invoice_register>
                </observers>
            </sales_order_invoice_register>
        </events>
    </global>
    <admin>
        <routers>
            <itaushopline>
                <use>admin</use>
                <args>
                    <module>Trezo_Itaushopline</module>
                    <frontName>itaushopline</frontName>
                </args>
            </itaushopline>
        </routers>
    </admin>
    <frontend>
        <routers>
            <itaushopline>
                <use>standard</use>
                <args>
                    <module>Trezo_Itaushopline</module>
                    <frontName>itaushopline</frontName>
                </args>
            </itaushopline>
        </routers>
        <translate>
            <modules>
                <Trezo_Itaushopline>
                    <files>
                        <default>Trezo_Itaushopline.csv</default>
                    </files>
                </Trezo_Itaushopline>
            </modules>
        </translate>
        <layout>
            <updates>
                <itaushopline module="Trezo_Itaushopline">
                    <file>trezo/itaushopline.xml</file>
                </itaushopline>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Trezo_Itaushopline>
                    <files>
                        <default>Trezo_Itaushopline.csv</default>
                    </files>
                </Trezo_Itaushopline>
            </modules>
        </translate>
        <layout>
            <updates>
                <itaushopline>
                    <file>itaushopline.xml</file>
                </itaushopline>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <payment>
            <itaushopline_standard>
                <active>1</active>
                <active_cron>1</active_cron>
                <title>Ita√∫ ShopLine</title>
                <order_status>pending_payment</order_status>
                <cctypes>ITAU_SLIP,ITAU_TEF</cctypes>
                <model>itaushopline/standard</model>
                <payment_action>authorize</payment_action>
                <status_to_verify>pending,pending_payment</status_to_verify>
            </itaushopline_standard>
            <itaushopline_settings>
                <debug>1</debug>
                <expiration>3</expiration>
                <submit_url>https://shopline.itau.com.br/shopline/Impressao.aspx</submit_url>
                <query_url>https://shopline.itau.com.br/shopline/consulta.asp</query_url>
                <taxvat_attribute>taxvat</taxvat_attribute>
            </itaushopline_settings>
        </payment>
    </default>
</config>
