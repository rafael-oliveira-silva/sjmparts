<?php $order = Mage::getModel('sales/order')->loadByIncrementId($this->getRealOrderId()) ?>
<?php $additionalData = unserialize($order->getPayment()->getAdditionalData()) ?>
<?php $autorizacao = $additionalData['autorizacao']['mensagem'].' ('.$additionalData['autorizacao']['codigo'].')' ?>
<?php if( strstr( $order->getPayment()->getMethod(), 'cielo' ) ): ?>
	<div class="page-title">
		<h1><?php echo $autorizacao ?></h1>
	</div>
	<?php if ($this->getRealOrderId()) : ?><p><?php echo $this->__('Order #') . $this->getRealOrderId() ?></p><?php endif ?>
	<?php if ($error = $this->getErrorMessage()) : ?><p><?php echo $error ?></p><?php endif ?>
	<p><?php echo $this->__('Click <a href="%s">here</a> to continue shopping.', $this->getContinueShoppingUrl()) ?></p>
<?php else: ?>
	<div class="page-title">
		<h1><?php echo $this->__('An error occurred in the process of payment') ?></h1>
	</div>
	<?php if ($this->getRealOrderId()) : ?><p><?php echo $this->__('Order #') . $this->getRealOrderId() ?></p><?php endif ?>
	<?php if ($error = $this->getErrorMessage()) : ?><p><?php echo $error ?></p><?php endif ?>
	<p><?php echo $this->__('Click <a href="%s">here</a> to continue shopping.', $this->getContinueShoppingUrl()) ?></p>
<?php endif ?>
<div class="buttons-set">
	<button type="button" class="button" onclick="window.location='<?php echo Mage::getBaseUrl() ?>'">
		<span>
			<span>Retornar ao site</span>
		</span>
	</button>
</div>